{% extends 'base.html.twig' %}

{% block title %}Transaccion index{% endblock %}

{% block body %}
    <h1>Transaccion index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th>IdCliente</th>
                <th>Monto</th>
                <th>Timestamp</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaccion in transaccions %}
            <tr>
                <td>{{ transaccion.id }}</td>
                <td>{{ transaccion.tipo }}</td>
                <td>{{ transaccion.idCliente }}</td>
                <td>{{ transaccion.monto }}</td>
                <td>{{ transaccion.timestamp ? transaccion.timestamp|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_transaccion_show', {'id': transaccion.id}) }}">show</a>
                    <a href="{{ path('app_transaccion_edit', {'id': transaccion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transaccion_new') }}">Create new</a>
{% endblock %}
